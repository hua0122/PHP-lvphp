.cl{
  clear: both;
}
.report{
  width: 700rpx;
  text-align: right;
  height: 30rpx;
}
.report-btn{
  display: inline-block;
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
  margin-right: 10rpx;
}

.box{
  width: 92%;
  margin: 60rpx auto 0;
  background: #FFF;
  padding-bottom: 65rpx;
  padding-top: 24rpx;
  position: relative;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .1);
  color: #333;
}
.userinfo {
  display: block;
  width: 200rpx;
  height: 192rpx;
  text-align: center;
  margin: -116rpx auto 24rpx;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 40rpx
}
.userinfo-name{
  width: 100%;
  font-size: 28rpx;
  color: #333;
  display:inline-block;
  vertical-align:middle;
  margin-right:8rpx;
}
.zhye{
  padding-left: 60rpx;
  padding-top: 30rpx;
  line-height: 90rpx;
  font-size: 28rpx;
}
.amount{
  display: inline-block;
  min-width: 112rpx;
  margin: 0 6rpx 0 18rpx;
  text-align: right;
  font-size: 36rpx;
  color: #DE4C56;
  vertical-align: -2rpx;
}
.unit{
  margin-left: 4rpx;
}
.txt{
  font-size: 32rpx;
  padding: 30rpx 0;
  position: relative;
}
.txt .txt-l{
  float: left;
  width: 20%;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 60rpx;
  vertical-align: middle;
  font-size: 28rpx;
}
.txt-r{
  float: left;
  width: 64%;
}
.txt .txtipt{
  width: 100%;
  padding-top:0;
  padding-bottom: 26rpx; 
  position: relative;
}
.txt text.icon{
  padding: 0;
  color: #666;
  font-size: 36rpx;
  position: absolute;
  left: 6rpx;
  bottom: 28rpx;
}
.txt input{
  display: block;
  width: 86%;
  height: 54rpx;
  color: #333;
  margin: 0 auto;
  font-size: 32rpx;
  border-bottom:2rpx solid #D9D9D9; 
  padding-left:50rpx;

}
.ts{
  font-size: 26rpx;
  color: #999;
  padding-left: 323rpx;
}
.ts text{
  color: #009944;
}
.ts2{
  padding-left: 0;
  text-align: center
}
.btn-area button{
  width: 592rpx;
  height: 82rpx;
  line-height: 82rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 40rpx auto;
  background:#009944;
}

.question{
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
}

.adv{
  position: absolute;
  bottom: 0;
  left: 30rpx;
}