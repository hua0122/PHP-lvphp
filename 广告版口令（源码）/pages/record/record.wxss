page{
  background: #fff;
}
.container{
  height: 100%;
}
.nav{
  width: 100%;
  height: 88rpx;
  background:#DE4C56;
  position: absolute;
  top: 0;
  z-index: 100
}
.nav>view{
  width: 50%;
  height: 88rpx;
  line-height: 90rpx;
  text-align: center;
  float: left;
  color: #fff;
  font-size: 32rpx;
}
.nav>view.on{
  color: #fff;
  width: 50%;
  position: relative;

}
.nav>view.on text::before{
  content:" ";
  height:41%;
  border-bottom:4rpx solid #fff;
  width:35%;
  position:absolute;
  left:32%;
  bottom:8%;
}

swiper{width: 100%;height: 100%;}
.swiper-scroll{
  height: 100%;
}
.con-box{
  height: auto;
  min-height: 100%;
  position: relative;
}
.userinfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
}
.userinfo .headframe{
  display: block;
  width: 200rpx;
  height: 192rpx;
  text-align: center;
  margin: 0 auto;
}
.userinfo-avatar {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
  margin-top: 40rpx
}
.userinfo-name{
  font-size: 30rpx;
  color: #333;
  margin: 26rpx 0 0;
}
