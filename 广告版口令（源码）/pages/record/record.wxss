.maxmoney{
  color: #DE4C56;
  font-size: 28rpx;
  overflow: hidden;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
.maxmoney image{
  width: 28rpx;
  height: 22rpx;
  float: right;
  margin-top: 12rpx;
  margin-right: 10rpx;
}
.maxmoney text{
  float: right;
}
